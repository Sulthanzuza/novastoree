<head>
  <link rel="stylesheet" href="/products.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
  <title>{{title}}</title>
</head>

{{>dashp}}
<div class="products-containers">
  <div class="layout-wrappers" style="height:105%">
    <main class="main-contents">
      <header class="headers">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <span class="breadcrumb-text">Admin</span>
          <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/347fc193d0088dca0695d99147b3700ee95d8efb9ecfa3c2f8ce353113eebee3?placeholderIfAbsent=true&apiKey=d7cebeeadab64378ab4fc611373387df" alt="" />
          <span class="breadcrumb-text breadcrumb-active">Offers</span>
        </nav>
        <a class="logout-button" aria-label="Logout" href="/admin/logout">
          <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/434f453e4cc985013ba5977dc6c3ec92bd5cb52d93cf0e330a3970e94bfbd360?placeholderIfAbsent=true&apiKey=d7cebeeadab64378ab4fc611373387df" alt="" />
        </a>
      </header>

      <section class="products-grid">
        <div class="row m-0">
          <div class="containerboxcat mt-4 p-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
              <h3 class="fw-medium">Offers</h3>
              <button class="add-button" onclick="window.location.href='/admin/add-offer'">Add Offer</button>
            </div>

            <div class="table-responsive mt-4">
              <table id="offerTable" class="table table-bordered align-middle">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Type</th>
                    <th scope="col">Expiry Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each offers}}
                  <tr id="offer-row-{{_id}}">
                    <td>{{name}}</td>
                    <td>{{discount}}%</td>
                    <td>{{type}}</td>
                    <td>{{expiry}}</td>
                    <td>
                      <div class="form-check form-switch d-flex justify-content-center">
                        <input class="form-check-input status-toggle" type="checkbox" role="switch" 
                          id="status-{{_id}}" data-id="{{_id}}" {{#if status}}checked{{/if}}>
                        <label class="ms-2 status-label {{#if status}}text-success{{else}}text-danger{{/if}}" 
                          for="status-{{_id}}" id="status-label-{{_id}}">
                          {{#if status}}Active{{else}}Inactive{{/if}}
                        </label>
                      </div>
                    </td>
                    <td>
                      <button type="button" class="btn btn-outline-danger btn-sm delete-btn" data-id="{{_id}}">
                        <i class="bi bi-trash"></i> Delete
                      </button>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<script src="/js/offers.js"></script>