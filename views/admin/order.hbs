<head>
<link rel="stylesheet" href="/products.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
<style>

</style>
<title>{{title}}</title>
</head>
{{>dashp}}
<div class="products-containers">
  <div class="layout-wrappers" style="height:105%">
    <main class="main-contents">
      <header class="headers">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          <span class="breadcrumb-text">Admin</span>
          <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/347fc193d0088dca0695d99147b3700ee95d8efb9ecfa3c2f8ce353113eebee3?placeholderIfAbsent=true&apiKey=d7cebeeadab64378ab4fc611373387df" alt="" />
          <span class="breadcrumb-text breadcrumb-active">Orders</span>
        </nav>
        <a class="logout-button" aria-label="Logout" href="/admin/logout">
          <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/434f453e4cc985013ba5977dc6c3ec92bd5cb52d93cf0e330a3970e94bfbd360?placeholderIfAbsent=true&apiKey=d7cebeeadab64378ab4fc611373387df" alt="" />
        </a>
      </header>

      <section class="products-grid">
        <div class="row m-0">
          <div class="containerboxcat mt-4 p-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
              <h3 class="fw-medium">Orders</h3>
            </div>

            <div class="table-responsive mt-4">
              <table id="customerTable" class="table table-bordered align-middle text-center">
                <thead class="table-light">
                  <tr>
                    <th scope="col">Order <br> Number</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total</th>
                    <th scope="col">Order <br>Status</th>
                    <th scope="col">Payment <br>Status</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
  {{#each orders}}
  <tr>
    <td class="product-name">
     {{orderNumber}}
    </td>
    <td>{{this.shippingAddress.fullName}}</td>
    <td class="formatted-date">{{formatDate this.createdAt}}</td>
    <td> â‚¹{{this.total}}</td>

    <!-- Display order status as "Completed" or "Not Completed" -->
    <td>
      <span class="badge {{#if (eq this.completionStatus 'Completed')}}bg-success{{else}}bg-warning{{/if}}">
        {{this.completionStatus}}
      </span>
    </td>
  <td>
  <span class="badge 
    {{#if (eq this.payment.status 'Paid')}}bg-success
    {{else if (eq this.payment.status 'Pending')}}bg-warning
    {{else if (eq this.payment.status 'Failed')}}bg-danger
    {{else}}bg-secondary{{/if}}">
    {{this.payment.status}}
  </span>
</td>

    <td><a href="/admin/orderdetails/{{this._id}}"><button type="button" class="btn btn-danger">Edit</button></a></td>
  </tr>

  {{/each}}
</tbody>

              </table>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

<script src="/js/orderDetails.js"></script>
