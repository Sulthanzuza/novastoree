<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/forgot.css">
<title>{{title}}</title>
{{> header}} 

<div class="login">
    <div class="text-center mb-4">Forgot Password</div>
</div>

<div class="form-section d-flex justify-content-center align-items-center">
    <div class="login-container">
        <div class="text-container text_center">
            <p>Please enter the email address associated with your account. We'll promptly send you a link to reset your password.</p>
        </div>
        
        <!-- Form for entering email -->
        <form action="/forgot-password" method="POST">
            <div class="fields">
                <p>Email</p>
                <input type="email" class="inputs" id="email" name="email" placeholder="Enter your email" required>
                <button type="submit" class="btns">Continue</button>
            </div>
        </form>
    </div>
</div>

{{> footer}} <!-- Footer component -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



{{#if message}}
<script>
    Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: '{{message}}',
    });
</script>
{{/if}}
